<%= render Layout::GemShow.new(gem: @gem, namespaces: @namespaces, classes: @gem.classes, class_methods: @gem.class_methods, instance_methods: @gem.instance_methods) do %>
  <div class="pb-5 flex justify-between">
    <%= render Layout::Subheading.new(title: "Code changes") %>
    <%= render Layout::Badge.new(label: "Demo") %>
  </div><hr>

  <% @gem.versions.first(3).each do |version| %>
    <div class="mt-12 mb-24">
      <%= render Layout::Subheading.new(title: version["number"]) %>

      <div class="grid grid-cols-1 lg:grid-cols-2 xl:grid-cols-3 mt-12 gap-4">
        <div class="">
          <h3 class="list-header">Module Changes</h3>

          <ul role="list" class="mt-6">
            <% @gem.modules.sample((2..7).to_a.sample).each do |m| %>
              <li class="flex gap-x-4 py-1 text-sm font-semibold leading-6 text-gray-900">
                <%= render Layout::Status.new(status: [:orange, :green, :red].sample) %>
                <code><%= m.qualified_name %></code>
              </li>
            <% end %>
          </ul>
        </div>

        <div class="">
          <h3 class="list-header">Class Changes</h3>

          <ul role="list" class="mt-6">
            <% @gem.classes.sample((2..7).to_a.sample).each do |c| %>
              <li class="flex gap-x-4 py-1 text-sm font-semibold leading-6 text-gray-900">
                <%= render Layout::Status.new(status: [:orange, :green, :red].sample) %>
                <code><span class="text-gray-400"><%= c.namespace %>::</span><%= c.name %></code>

              </li>
            <% end %>
          </ul>
        </div>

        <div class="">
          <h3 class="list-header">Method Changes</h3>

          <ul role="list" class="mt-6">
            <% @gem.classes.map(&:instance_methods).flatten.compact.sample((2..7).to_a.sample).each do |method| %>
              <li class="flex gap-x-4 py-1 text-sm font-semibold leading-6 text-gray-900">
                <%= render Layout::Status.new(status: [:orange, :green, :red].sample) %>
                <code><span class="text-gray-400"><%= method.target.qualified_name %></span>#<%= method.name %></code>
              </li>
            <% end %>
          </ul>
        </div>
      </div>
    </div>

    <hr>
  <% end %>
<% end %>
