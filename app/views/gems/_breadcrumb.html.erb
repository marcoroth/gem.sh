<nav class="flex mb-4" aria-label="Breadcrumb">
  <ol role="list" class="flex flex-wrap items-center space-x-4">
    <li>
      <div class="flex items-center">
        <%= link_to gems_path, class: "text-sm font-medium text-gray-500 hover:text-gray-700" do %>
          Gems
        <% end %>
      </div>
    </li>

    <li>
      <div class="flex items-center">
        <svg class="h-5 w-5 flex-shrink-0 text-gray-400" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
          <path fill-rule="evenodd" d="M7.21 14.77a.75.75 0 01.02-1.06L11.168 10 7.23 6.29a.75.75 0 111.04-1.08l4.5 4.25a.75.75 0 010 1.08l-4.5 4.25a.75.75 0 01-1.06-.02z" clip-rule="evenodd" />
        </svg>

        <%= link_to gem_path(@gem.name), class: "ml-4 text-sm font-medium text-gray-500 hover:text-gray-700" do %>
          <pre><%= @gem.name %></pre>
        <% end %>
      </div>
    </li>

    <% if params[:version] %>
      <li>
        <div class="flex items-center">
          <svg class="h-5 w-5 flex-shrink-0 text-gray-400" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
            <path fill-rule="evenodd" d="M7.21 14.77a.75.75 0 01.02-1.06L11.168 10 7.23 6.29a.75.75 0 111.04-1.08l4.5 4.25a.75.75 0 010 1.08l-4.5 4.25a.75.75 0 01-1.06-.02z" clip-rule="evenodd" />
          </svg>

          <%= link_to gem_version_gem_path(@gem.name, @gem.version), class: "ml-4 text-sm font-medium text-gray-500 hover:text-gray-700" do %>
            <pre><%= @gem.version %></pre>
          <% end %>
        </div>
      </li>
    <% end %>

    <% [@module, @namespace, @target, @class, @class_method, @instance_method, @method].compact.each do |item| %>
      <li>
        <div class="flex items-center">
          <svg class="h-5 w-5 flex-shrink-0 text-gray-400" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
            <path fill-rule="evenodd" d="M7.21 14.77a.75.75 0 01.02-1.06L11.168 10 7.23 6.29a.75.75 0 111.04-1.08l4.5 4.25a.75.75 0 010 1.08l-4.5 4.25a.75.75 0 01-1.06-.02z" clip-rule="evenodd" />
          </svg>

          <%= link_to item.url(@gem), class: "ml-4 text-sm font-medium text-gray-500 hover:text-gray-700" do %>
            <pre><%= item %></pre>
          <% end %>
        </div>
      </li>
    <% end %>
  </ol>
</nav>
