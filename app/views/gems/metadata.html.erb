<%= render Gems::Wrapper.new(gem: @gem, namespaces: @gem.top_level_modules, classes: @gem.classes, class_methods: @gem.class_methods, instance_methods: @gem.instance_methods) do %>
  <div class="pb-5 flex justify-between">
    <%= render Layout::Subheading.new(title: "Metadata") %>
  </div><hr>

  <div class="mt-12 border-t border-gray-100">
    <dl class="divide-y divide-gray-100">
      <% @gem.metadata.instance_variables.each do |var| %>
        <% value = @gem.metadata.instance_variable_get(var) %>
        <% next if value.blank? %>

        <div class="px-4 py-6 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-0">
          <dt class="text-sm font-medium leading-6 text-gray-900">
            <%= var.to_s.gsub("@", "").humanize %>
          </dt>

          <dd class="mt-1 text-sm leading-6 text-gray-700 sm:col-span-2 sm:mt-0">
            <% if value.is_a?(String) %>
              <%= value.to_s %>
            <% elsif value.is_a?(Array) %>
              <%= value.join("<br/>").html_safe %>
            <% else %>
              <%= value.to_s %>
            <% end %>
          </dd>
        </div>
      <% end %>
    </dl>
  </div>
<% end %>
