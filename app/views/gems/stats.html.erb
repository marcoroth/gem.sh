<%= render Layout::GemShow.new(gem: @gem, namespaces: @namespaces, classes: @classes, class_methods: @class_methods, instance_methods: @instance_methods) do %>
  <div class="pb-5 flex justify-between">
    <%= render Layout::Subheading.new(title: "Statistics") %>
  </div><hr>

  <div class="mt-12 mx-auto max-w-2xl lg:max-w-none">
    <dl class="grid grid-cols-2 gap-0.5 overflow-hidden rounded-2xl text-center sm:grid-cols-2 lg:grid-cols-4">
      <div class="flex flex-col bg-gray-400/5 p-8">
        <dt class="text-sm font-semibold leading-6 text-gray-600">Downloads</dt>
        <dd class="order-first text-3xl font-semibold tracking-tight text-gray-900"><%= number_to_human(@gem.downloads) %></dd>
      </div>
      <div class="flex flex-col bg-gray-400/5 p-8">
        <dt class="text-sm font-semibold leading-6 text-gray-600">Versions</dt>
        <dd class="order-first text-3xl font-semibold tracking-tight text-gray-900"><%= @gem.versions.count %></dd>
      </div>
      <div class="flex flex-col bg-gray-400/5 p-8">
        <dt class="text-sm font-semibold leading-6 text-gray-600">Modules</dt>
        <dd class="order-first text-3xl font-semibold tracking-tight text-gray-900"><%= @gem.modules.count %></dd>
      </div>
      <div class="flex flex-col bg-gray-400/5 p-8">
        <dt class="text-sm font-semibold leading-6 text-gray-600">Classes</dt>
        <dd class="order-first text-3xl font-semibold tracking-tight text-gray-900"><%= @gem.classes.count %></dd>
      </div>
    </dl>
  </div>
<% end %>
