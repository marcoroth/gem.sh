<%= render Gems::Wrapper.new(gem: @gem, modules: @gem.top_level_modules, classes: @gem.top_level_classes, class_methods: @gem.class_methods, instance_methods: @gem.instance_methods) do %>
  <div class="border-b border-gray-300 pb-2 mb-4 pb-5 flex justify-between">
    <%= render UI::Subheading.new(title: "Featured Classes") %>
    <%= render UI::Badge.new(label: "Demo") %>
  </div>

  <div class="grid grid-cols-2 md:grid-cols-2 lg:grid-cols-3 gap-4 mb-12">
    <% @gem.classes.sample(6).each do |klass| %>
      <%= link_to gem_class_path(@gem.name, @gem.version, klass.qualified_name) do %>
        <%= render UI::Card.new(title: klass.name, description: klass.qualified_namespace) do |card| %>
          <%= card.with_badge(label: klass.object_name) %>
        <% end %>
      <% end %>
    <% end %>
  </div>

  <div class="border-b border-gray-300 pb-2 mb-4">
    <%= render UI::Subheading.new(title: "All Classes") %>
  </div>

  <div class="grid grid-cols-2 md:grid-cols-2 lg:grid-cols-3 gap-4 mb-12">
    <% @gem.classes.each do |klass| %>
      <%= link_to gem_class_path(@gem.name, @gem.version, klass.qualified_name) do %>
        <%= render UI::Card.new(title: klass.name, description: klass.qualified_namespace) do |card| %>
          <%= card.with_badge(label: klass.object_name) %>
        <% end %>
      <% end %>
    <% end %>
  </div>

  <div class="border-b border-gray-300 pb-2 mb-4">
    <%= render UI::Subheading.new(title: "All Modules") %>
  </div>

  <div class="grid grid-cols-2 md:grid-cols-2 lg:grid-cols-3 gap-4 mb-12">
    <% @gem.modules.each do |mod| %>
      <%= link_to gem_module_path(@gem.name, @gem.version, mod.qualified_name) do %>
        <%= render UI::Card.new(title: mod.name, description: mod.qualified_namespace) do |card| %>
          <%= card.with_badge(label: mod.object_name) %>
        <% end %>
      <% end %>
    <% end %>
  </div>
<% end %>
