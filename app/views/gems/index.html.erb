<%= render UI::Container.new do %>
  <%= render UI::Subheading.new(title: title("Gems")) %>

  <%= render partial: "search/search" %>

  <div class="mx-auto mt-6">
    <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-4">
      <% @gems.each do |gem| %>
        <%= link_to gem_version_path(gem.name, gem.version), class: "block w-full" do %>
          <%= render UI::Card.new(title: gem.name, description: gem.description.to_s.truncate(50)) do |card| %>
            <%= card.with_badge(label: gem.version) %>
          <% end %>
        <% end %>
      <% end %>
    </div>
  </div>
<% end %>
