<% if @gem.guide_files.any? || @gem.documentation_files.any? %>
  <div class="my-16 xl:max-w-none">
    <h2 id="guides" class="scroll-mt-24">
      <a class="group relative text-xl font-bold text-gray-800" href="#guides">
        <% if @gem.guide_files.any? %>Guides<% else %>Documentation<% end %>
      </a>
    </h2>

    <div class="not-prose grid grid-cols-1 gap-4 border-gray-900/5 pt-4 sm:grid-cols-2 xl:grid-cols-2">
      <% (@gem.guide_files + @gem.documentation_files).take(4).each do |title| %>
        <%= link_to gem_version_guide_path(@gem.name, @gem.version, title) do %>
          <div class="border rounded p-4 hover:bg-gray-50">
            <h3 class="text-sm font-semibold text-gray-900"><%= title %></h3>
            <p class="mt-1 text-sm text-gray-600">Read about "<%= title.split("/").last.split(".").first.humanize %>" in <%= @gem.name %></p>
            <p class="mt-4">
              <span class="inline-flex gap-0.5 justify-center overflow-hidden text-sm font-medium transition text-blue-500 hover:text-blue-600">
                Read more

                <svg viewbox="0 0 20 20" fill="none" aria-hidden="true" class="mt-0.5 h-5 w-5 relative top-px -mr-1">
                  <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" d="m11.5 6.5 3 3.5m0 0-3 3.5m3-3.5h-9"></path>
                </svg>
              </span>
            </p>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
<% end %>
