<%= render Layout::GemShow.new(gem: @gem, namespaces: @namespaces, classes: @gem.classes, class_methods: @gem.class_methods, instance_methods: @gem.instance_methods) do %>
  <div class="pb-5 flex justify-between">
    <%= render Layout::Subheading.new(title: "Guides") %>
    <%= render Layout::Badge.new(label: "Demo") %>
  </div><hr>

  <div class="mt-12 grid grid-cols-1 gap-8 lg:grid-cols-3">
    <% @guides.each do |title| %>
      <%= link_to gem_guide_path(@gem.name, @gem.version, title) do %>
        <%= render Layout::Card.new(title: title, description: "Learn more about #{title} in #{@gem.name}") do |card| %>
          <%= card.with_badge(label: "Guide") %>
        <% end %>
      <% end %>
    <% end %>
  </div>
<% end %>
